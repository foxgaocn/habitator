<% layout('../../../views/boilerplate') -%>
<% stylesheet('/stylesheets/progress.css') -%>
<div id="fb-root">
</div>
<div class="splash">
    <div class="container">
        <div class="row">
            <h2>
                Oops, Your plan was broken
            </h2>
        </div>
        <div class="row">
            <div class="col-xs-0 col-sm-2 col-md-3 col-lg-4"></div>
            <div class="col-xs-12 col-sm-8 col-md-6  col-lg-4 left">
                <div class='alert alert-danger center'>
                	You haven't start your habit routine
                </div>
            </div>
            <div class="col-xs-0 col-sm-2 col-md-3 col-lg-4"></div>
        </div>
    </div>
</div>
<div class="section-tout">
    <div class = "container">
        <div class="row">
            <div class="col-xs-0 col-sm-2 col-md-3 col-lg-3"></div>
            <div class="col-xs-12 col-sm-8 col-md-6  col-lg-6 left">
              <form class="form-horizontal">
                <fieldset>
                  <legend style='margin-left:10px;'>A habit you'd like to have</legend>
                  <div class="form-group">
                    <label class="col-lg-3 control-label" for='trigger'>Reminder</label>
                     <div class="col-lg-9">
                            <input type="text" id="trigger" name="trigger" value='<%= habit.trigger %>' class='form-control'>
                      </div>
                    
                </div>
                <div class="form-group"> 
                    <label class="col-lg-3 control-label" for='action'>
                        I will</label>
                    <div class="col-lg-9">
                        <input type="text" id="action" name="action" value='<%= habit.action %>' class='form-control'>
                    </div>
                </div>
                <div class="form-group" for='goal'>
                    <label class="col-lg-3 control-label">So that
                    </label>
                    <div class="col-lg-9">
                    <input type="text" id="goal" name="goal" value='<%= habit.goal %>' class='form-control'>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label" for='startDate'>Start Date:
                    </label>
                    <div class="col-lg-9">
                     <input type="date" id="startDate" name="startDate" class='form-control'>
                    </div>
                </div>
                <div class='alert alert-danger invisible' id='error-msg'>
                </div>
                <div class="form-group center">
                    <input type="submit" id="submitButton" name="submitButton" value="Make a commitment"
                        class="btn btn-info">
                </div>
                </fieldset>
              </form>
              <div class="col-xs-0 col-sm-2 col-md-3 col-lg-3"></div>
            </div>
        </div>
        </div>
    </div>
</div>