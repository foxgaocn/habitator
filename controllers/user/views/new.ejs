<% stylesheet('/stylesheets/progress.css') -%>
<% script('/script/progress.js') -%>
<div id="fb-root">
</div>
<div class="splash">
    <div class="container">
        <div class="row">
            <h2>
                Define your own habit
            </h2>
            <h2>
                OR</h2>
            <h2>
                Choose from <a href="#">what others are doing</a>
            </h2>
        </div>
        <div class="row">
            <div class="col-xs-0 col-sm-2 col-md-3 col-lg-4"></div>
            <div class="col-xs-12 col-sm-8 col-md-6  col-lg-4 left">
                <ul id="tip">
                    <li>Follow the Reminder-Routine-Reward process</li>
                    <li>Continue in 21 days</li>
                    <li>Start simple, start tiny</li>
                </ul>
            </div>
            <div class="col-xs-0 col-sm-2 col-md-3 col-lg-4"></div>
        </div>
    </div>
</div>
<div class="section-tout">
    <div class = "container">
        <div class="row">
            <div class="col-lg-12">
           <div class="well">
              <form class="form-horizontal">
                <fieldset>
                  <legend>A habit I wish to make</legend>
                  <div class="form-group">
                    <label class="col-lg-2 control-label">
                        Reminder <span><a class="explain" href='#'></a></span></label>
                     <div class="col-lg-10">
                            <input type="text" id="trigger" name="trigger" placeholder='a trigger happens'> ?
                      </div>
                    
                </div>
                <div class="form-group"> 
                    <label class="col-lg-2 control-label">
                        I will <span><a class="explain" href='#'>?</a></span></label>
                    <div class="col-lg-10">
                        <input type="text" id="action" name="action" placeholder='do some action routinely'>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">So that <span><a class="explain" href='#'>?</a></span>
                    </label>
                    <div class="col-lg-10">
                    <input type="text" id="goal" name="goal" placeholder='I achieve a positive change'>
                    </div>
                </div>
                <div class="form-group">
                    <label calss="col-lg-2 control-label">Start Date</label>
                    <div class="col-lg-10">
                        <input type="date" id="startDate" name="startDate">
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" id="submitButton" name="submitButton" value="Make a commitment"
                        class="btn btn-warning">
                </div>
                </fieldset>
              </form>
            </div>
        </div>
        </div>
    </div>
</div>


