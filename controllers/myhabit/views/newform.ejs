<div class="section-tout">
    <div class = "container">
        <div class="row">
            <div class="col-xs-0 col-sm-2 col-md-3 col-lg-3"></div>
            <div class="col-xs-12 col-sm-8 col-md-6  col-lg-6 left">
              <form class="form-horizontal">
                <fieldset>
                  <legend style='margin-left:10px;'>A habit you'd like to have</legend>
                  <div class="form-group">
                    <label class="col-lg-3 control-label" for='trigger'>When</label>
                     <div class="col-lg-9">
                            <input type="text" id="trigger" name="trigger" placeholder='a trigger happens' value='<%= habit.trigger %>' class='form-control'>
                      </div>
                    
                </div>
                <div class="form-group"> 
                    <label class="col-lg-3 control-label" for='action'>
                        I will</label>
                    <div class="col-lg-9">
                        <input type="text" id="action" name="action" placeholder='do something routinely' value='<%= habit.trigger %>' class='form-control'>
                    </div>
                </div>
                <div class="form-group" for='goal'>
                    <label class="col-lg-3 control-label">So that
                    </label>
                    <div class="col-lg-9">
                    <input type="text" id="goal" name="goal" placeholder='achieve a goal' value='<%= habit.goal %>' class='form-control'>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label" for='startDate'>Start Date:
                    </label>
                    <div class="col-lg-9">
                     <input type="date" id="startDate" name="startDate" class='form-control'>
                         <div class='right'>
                            <a id='more_info_toggle'>More information >> </a>
                        </div>
                    </div>
                </div>
                <div id='habit_more_info' class='myhidden'>    
                    <div class="form-group" for='category'>
                        <label class="col-lg-3 control-label">Category
                        </label>
                        <div class="col-lg-9">
                        <select id="category" name="category" placeholder='achieve a goal' class='form-control'>
                            <option value="1">Health and fitness</option>
                            <option value="2">Relationship</option>
                            <option value="3">Career</option>
                            <option value="0" selected>Other</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group" for='comment'>
                        <label class="col-lg-3 control-label">Comment
                        </label>
                        <div class="col-lg-9">
                        <textarea id="comment" name="comment" class='form-control'></textarea>
                        </div>
                    </div>
                </div>
                <div class='alert alert-danger invisible' id='error-msg'>
                </div>
               
                    
                <div class="form-group center">
                    <input type="submit" id="submitButton" name="submitButton" value="Make a commitment"
                        class="btn btn-info">
                </div>
                </fieldset>
              </form>
              <div class="col-xs-0 col-sm-2 col-md-3 col-lg-3"></div>
            </div>
        </div>
        </div>
    </div>
</div>
<% block('signinout', '<a href="/user/signout">Sign-out</a>') -%>